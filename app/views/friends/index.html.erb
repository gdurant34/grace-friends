<p style="color: green"><%= notice %></p>

<h1>Friend List</h1>

<table id="friends" class='table table-striped table-hover table-bordered'>
  <thread>
    <tr class="table-success text-secondary">
      <th scope='col'>
        <strong>First</strong>
      </th>
      <th scope='col'>
        <strong>Last</strong>
      </th>
      <th scope='col'>
        <strong>Email</strong>
      </th>
      <th scope='col'>
        <strong>Phone</strong>
      </th>
      <th scope='col'>
      </th>
    </tr>
  </thread>
  <tbody>
  <% @friends.each do |friend| %>
    <tr>
      <%= render friend %>  
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "Add Friend", new_friend_path, class:'btn btn-secondary' %>
