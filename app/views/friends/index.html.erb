<% if user_signed_in? %>


  <h1>Friend List</h1>

  <table id="friends" class='table table-striped table-hover table-bordered'>
    <thread>
      <tr class="table-success text-secondary">
        <th scope='col'>
          <strong>First</strong>
        </th>
        <th scope='col'>
          <strong>Last</strong>
        </th>
        <th scope='col'>
          <strong>Email</strong>
        </th>
        <th scope='col'>
          <strong>Phone</strong>
        </th>
        <%# <th scope='col'>
          <strong>User Id</strong>
        </th> %>
        <th scope='col'>
        </th>
      </tr>
    </thread>
    <tbody>
    <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
      <tr>
        <%= render friend %>  
        <td>
          <%= link_to "View", friend, class:'btn btn-secondary btn-sm' %>
        </td>
      </tr>
      <% end %>

    <% end %>
    </tbody>
  </table>

  <%= link_to "Add Friend", new_friend_path, class:'btn btn-secondary btn-sm' %>
<% else %>
  <h1>Welcome!</h1>
  Ready to simplify your contacts?  
  Sign up, and save them all in one place.
<% end %>
